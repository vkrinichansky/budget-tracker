/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "paths": {
      // Shared
      "@budget-tracker/shared-models": [
        "src/app/shared/models/index.ts"
      ],
      "@budget-tracker/shared-utils": [
        "src/app/shared/utils/index.ts"
      ],
      "@budget-tracker/design-system": [
        "src/app/shared/design-system/index.ts"
      ],
      "@budget-tracker/shared-features/navigation-bar": [
        "src/app/shared/features/navigation-bar/index.ts"
      ],
      // Domains
      "@budget-tracker/auth": [
        "src/app/domains/auth/index.ts"
      ],
      "@budget-tracker/metadata": [
        "src/app/domains/metadata/index.ts"
      ],
      "@budget-tracker/account": [
        "src/app/domains/account/index.ts"
      ],
      "@budget-tracker/category": [
        "src/app/domains/category/index.ts"
      ],
      "@budget-tracker/activity-log": [
        "src/app/domains/activity-log/index.ts"
      ],
      "@budget-tracker/snapshot": [
        "src/app/domains/snapshot/index.ts"
      ],
      // Orchestrators
      "@budget-tracker/currency-change-orchestrator": [
        "src/app/orchestrators/currency-change-orchestrator/index.ts"
      ],
      "@budget-tracker/move-money-between-accounts-orchestrator": [
        "src/app/orchestrators/move-money-between-accounts-orchestrator/index.ts"
      ],
      "@budget-tracker/reset-categories-orchestrator": [
        "src/app/orchestrators/reset-categories-orchestrator/index.ts"
      ],
      "@budget-tracker/category-transaction-orchestrator": [
        "src/app/orchestrators/category-transaction-orchestrator/index.ts"
      ],
      "@budget-tracker/remove-activity-log-record-orchestrator": [
        "src/app/orchestrators/remove-activity-log-record-orchestrator/index.ts"
      ],
      "@budget-tracker/edit-account-value-orchestrator": [
        "src/app/orchestrators/edit-account-value-orchestrator/index.ts"
      ],
      "@budget-tracker/month-reset-orchestrator": [
        "src/app/orchestrators/month-reset-orchestrator/index.ts"
      ],
      // Pages
      "@budget-tracker/auth-page": [
        "src/app/pages/auth/index.ts"
      ],
      "@budget-tracker/dashboard-page": [
        "src/app/pages/dashboard/index.ts"
      ],
      "@budget-tracker/statistics-page": [
        "src/app/pages/statistics/index.ts"
      ],
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": false,
  }
}