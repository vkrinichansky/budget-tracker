/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "paths": {
      "@budget-tracker/models": [
        "src/app/models/index.ts"
      ],
      "@budget-tracker/auth": [
        "src/app/domains/auth/index.ts"
      ],
      "@budget-tracker/metadata": [
        "src/app/domains/metadata/index.ts"
      ],
      "@budget-tracker/account": [
        "src/app/domains/account/index.ts"
      ],
      "@budget-tracker/activity-log": [
        "src/app/domains/activity-log/index.ts"
      ],
      "@budget-tracker/data": [
        "src/app/modules/data/index.ts"
      ],
      "@budget-tracker/design-system": [
        "src/app/modules/design-system/index.ts"
      ],
      "@budget-tracker/navigation-bar": [
        "src/app/modules/navigation-bar/index.ts"
      ],
      "@budget-tracker/budget-tracker": [
        "src/app/modules/budget-tracker/index.ts"
      ],
      "@budget-tracker/utils": [
        "src/app/modules/utils/index.ts"
      ],
      "@budget-tracker/dashboard": [
        "src/app/modules/budget-tracker/modules/dashboard/index.ts"
      ],
      "@budget-tracker/dashboard/categories": [
        "src/app/modules/budget-tracker/modules/dashboard/modules/categories/index.ts"
      ],
      "@budget-tracker/dashboard/info-cards": [
        "src/app/modules/budget-tracker/modules/dashboard/modules/info-cards/index.ts"
      ],
      "@budget-tracker/statistics": [
        "src/app/modules/budget-tracker/modules/statistics/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": false,
  }
}